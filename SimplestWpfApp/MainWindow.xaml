<Window x:Class="SimplestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplestWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="input1" HorizontalAlignment="Left" Margin="70,13,0,0" Height="23" VerticalAlignment="Top" TextWrapping="Wrap" Width="120"/>
        <TextBox x:Name="input2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="70,41,0,0" Width="120"/>
        <Label x:Name="label1" Content="Input 1" Margin="10,10,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="label2" Content="Input 2" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="Add" Content="ADD" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="54" Click="button_Click"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="23" Margin="70,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
